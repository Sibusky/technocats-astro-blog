---
// component imports
import MainLayout from "../layouts/MainLayout.astro";
import Link from "../components/Link.astro";
---

<MainLayout title="Page Not Found" description="This page not found">
    <div
        class="container"
        style={{
            display: "grid",
            placeItems: "center",
            textAlign: "center",
            gap: "var(--space-sm)",
        }}
    >
        <div>
            <h1 class="h1">Welp, this is awkward!</h1>
            <p>We seem to have misplaced something...</p>
        </div>
        <Link
            href="/"
            style="primary"
            text="Go Home"
            icon={{
                name: "ic:outline-other-houses",
                side: "left",
            }}
        />
    </div>
</MainLayout>
